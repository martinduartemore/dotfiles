# easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# grep settings
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias fgrep="fgrep --color=auto"

# ls settings
alias ls="ls -h --color=auto --group-directories-first"
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -CF'

# move to workspace directory
alias workspace='cd ~/workspace'
